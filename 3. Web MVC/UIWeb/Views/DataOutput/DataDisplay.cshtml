@using Parser.Model;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Data_Repository> receive = Model;
}

<title>@ViewBag.Title - ASP.Net MVC Work</title>

<p></p>

@*詳細資料顯示*@
<div class="list-group">
    <a class="list-group-item active">
        紫外線監控站點  —  @receive[0]._Parser_SiteName 站詳細資料
    </a>

    @for (int i = 0; i < receive.Count; i++)
    {
        <a class="list-group-item">
            <h4 class="list-group-item-heading">站點名稱：@receive[i]._Parser_SiteName</h4>
            <p class="list-group-item-text">紫外線等級：@receive[i]._Parser_UVI</p>
            <p class="list-group-item-text">站點位置：@receive[i]._Parser_County</p>
            <p class="list-group-item-text">發布單位：@receive[i]._Parser_PublishAgency</p>
            <p class="list-group-item-text">站點位置：@receive[i]._Parser_County</p>
            <p class="list-group-item-text">站點經度：@receive[i]._Parser_WGS84Lon</p>
            <p class="list-group-item-text">站點緯度：@receive[i]._Parser_WGS84Lat</p>
        </a>
    }
</div>